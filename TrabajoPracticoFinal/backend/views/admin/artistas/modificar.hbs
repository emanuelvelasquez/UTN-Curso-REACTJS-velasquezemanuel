<div class="container d-flex justify-content-end"><button
    class="btn btn-dark"
    onclick="window.history.back()"
  >Atras</button></div>
<br />

<div class="container col-md-4 text-center">
  <h2 class="d-flex justify-content-center">Modificar una Artistas</h2>

  <h6 id="msgSuccess" style="color:dodgerblue">{{msgSuccess}}</h6>
  <h6 id="msgError" style="color:red">{{msgError}}</h6>

  <form
    method="post"
    action="/admin/artistas/modificar"
    enctype="multipart/form-data"
  >
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="id_artista"
        hidden="true"
        value="{{id_artista}}"
        aria-describedby="helpId"
        placeholder=""
        required
      />
      <input
        type="text"
        class="form-control"
        name="id_img"
        hidden="true"
        value="{{id_img}}"
        aria-describedby="helpId"
        placeholder=""
      />
      <label for="">Nombre</label>
      <input
        type="text"
        class="form-control"
        name="nombre"
        value="{{nombre}}"
        aria-describedby="helpId"
        placeholder=""
        required
      />
      <small id="helpId" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
      <label for="">Descripcion</label>
      <input
        type="text"
        class="form-control"
        name="descripcion"
        value="{{descripcion}}"
        aria-describedby="helpId"
        placeholder=""
        required
      />
      <small id="helpId" class="form-text text-muted"></small>
    </div>
    <label for="">Imagen</label>

    <div class="custom-file mb-3">
      <input type="file" class="custom-file-input" name="imagen" />
      <label class="custom-file-label" for="validatedCustomFile">Seleccione una
        Imagen...</label>
    </div>

    {{#if image}}
      {{{image}}}

    {{else}}
      Sin imagen
    {{/if}}
    <br />
    <br />
    <button
      type="submit"
      class="btn form-control"
      style="background-color:#084547;color:#fff"
    >Guardar</button>
  </form>
</div>