<div class="container d-flex justify-content-end"><button
    class="btn btn-dark"
    onclick="window.history.back()"
  >Atras</button></div>
<br />

<div class="container col-md-4 text-center">
  <h2 class="d-flex justify-content-center">Agregar una Artista</h2>

  <h6 style="color:dodgerblue">{{msgSuccess}}</h6>
  <h6 style="color:red">{{msgError}}</h6>

  <form
    method="post"
    active="/admin/artistas/insert"
    enctype="multipart/form-data"
  >
    <div class="form-group">
      <label for="">Nombre</label>
      <input
        type="text"
        class="form-control"
        name="nombre"
        id=""
        aria-describedby="helpId"
        placeholder=""
        required
      />
      <small id="helpId" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
      <label for="">Descripcion</label>
      <input
        type="text"
        class="form-control"
        name="descripcion"
        id=""
        aria-describedby="helpId"
        placeholder=""
        required
      />
      <small id="helpId" class="form-text text-muted"></small>
    </div>
    <div class="custom-file mb-3">
      <input type="file" class="custom-file-input" name="imagen" />
      <label class="custom-file-label" for="validatedCustomFile">Seleccione una
        Imagen...</label>
    </div>
    <button
      type="submit"
      class="btn form-control"
      style="background-color:#084547;color:#fff"
    >Guardar</button>
  </form>
</div>